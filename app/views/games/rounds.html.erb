<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @game.name %>
</p>

<p>
  <b>Points:</b>
  <%= @game.points %>
</p>

<p>
  <% if @game.players.empty? %>
	There aren't any players yet. Why not add some?!
  <% else %>
	<table>
		<tr>
			<th>Player</th>
			<th>Points</th>
		</tr>
		<% @game.players.sort{|x,y| x.points(@game.id) <=> y.points(@game.id)}.each do |playa| %>
			<tr>
				<td><%= playa.handle %></td>
				<td><%= playa.points(@game.id) %></td>
			</tr>
		<% end %>
		<tr>
	</table>
  <% end %>
</p>

<p>
	<table>
		<tr>
			<th>Round Number</th>
			<% @game.players.sort{|x,y| x.name <=> y.name}.each do |p|  %>
				<th><%= p.handle %></th>
			<% end %>
		</tr>
		<% @game.rounds.each do |r|  %>			
			<tr>
				<td><%= r.position %></td>
				<% r.player_rounds.sort{|x,y| x.player.name <=> y.player.name}.each do |pr| %>
					<td><%= pr.score %></td>
				<% end %>
			</tr>
		<% end %>
	</table>		


</p>